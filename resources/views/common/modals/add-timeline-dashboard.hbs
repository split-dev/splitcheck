<!-- modal-add-timeline-dashboard -->
<div class="modal fade modal-add-timeline-dashboard" id="add-timeline-dashboard" role="dialog" data-focus="false"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content position-relative">
      <!-- modal-header -->
      <div class="modal-header d-flex align-items-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        </button>
      </div>
      <!-- /modal-header -->
      <!-- modal-body -->
      <div class="modal-body">
        <h2 class="text-dark-blue">Add to timeline</h2>
        <!-- form -->
        <form action="#" id="add-timeline-form" class="form">
          <div class="form__inputs">
            <!-- for error add class div form__single - *error* -->
            <div class="form__single form__single--fluid  error">
              <label class="form__label">Title</label>
              <input type="text" class="form__input" required="" placeholder="Gift for John">
              <span class="form__symbol-error"></span>
            </div>
            <div class="form__single form__single--fluid">
              <label class="form__label">Comment</label>
              <div class="w-100 max-text" data-maxlength="400">
                <textarea class="form__textarea" placeholder="Write something" maxlength="400"></textarea>
                <div class="count"><span>0</span>/<span>400</span></div>
              </div>
              <span class="form__symbol-error"></span>
            </div>

            <div class="form__wrap">
              <span class="form__wrap-title">Date and time</span>
              <!-- for error add class div form__single - *error* -->
              <div class="form__single form__single--date form__single--fluid">
                <label class="form__label">Set a follow-up date</label>
                <input type="text" class="form__input" data-toggle="datepicker" required="">
                <span class="form__symbol-error"></span>
              </div>
              <!-- for error add class div form__single - *error* -->
              <div class="form__single form__single--time form__single--fluid">
                <label class="form__label">Set a time</label>
                <input type="text" class="form__input" data-toggle="timepicker" required="">
                <span class="form__symbol-error"></span>
              </div>

              <div class="form__checkbox-wrap form__checkbox-wrap--custom">
                <input type="checkbox" id="checkbox-remind" class="form__checkbox-orange" name="checkbox-remind">
                <label for="checkbox-remind">
                  Remind me a day before
                </label>
              </div>
            </div>

            <div class="form__wrap">
              <span class="form__wrap-title">Add image (optional)</span>
              <div class="form__single">
                <a href="#add-photo" data-toggle="modal"
                  class="new-banner position-relative d-flex align-items-center justify-content-center">
                  <i class="icon icon-plus-blue"></i>
                </a>
              </div>
            </div>

            <div class="form__wrap form__wrap--location">
              <div class="sort-box">
                <div class="sort-box__line sort">
                  <div class="sort-box__select">
                    <span class="sort-box__arrow">
                      <strong>Location</strong>
                      <img src="images/icons/navigate_next-24px.svg" alt="arrow">
                    </span>
                    <div class="form__single form__single--select form__single--select-default form__single--fluid">
                      <select class="form__select form__select--default" data-toggle="select-parent">
                        <option value="location-1" title="Store Name Two">Location 1</option>
                        <option value="location-2" title="Store Name One OneOne">Location 2</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="form__wrap">
              <div class="sort-box">
                <div class="sort-box__line sort">
                  <div class="sort-box__select">
                    <span class="sort-box__arrow">
                      <strong>Invite</strong>
                      <img src="images/icons/navigate_next-24px.svg" alt="arrow">
                    </span>
                    <div class="form__single form__single--select form__single--select-default form__single--fluid">
                      <select class="form__select form__select--default" data-toggle="select-parent">
                        <option value="invite-1" title="Store Name Two">Invite 1</option>
                        <option value="invite-2" title="Store Name One OneOne">Invite 2</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- modal-footer -->
          <div class="modal-footer w-100 d-flex align-items-center justify-content-center">
            <button class="btn-blue">Add to a timeline</button>
          </div>
          <!-- /modal-footer -->
        </form>
        <!-- /form -->
      </div>
      <!-- /modal-body -->
      <!-- <div class="modal-footer">
      </div> -->
    </div>
  </div>
</div>
<!-- /modal-add-timeline-dashboard -->
