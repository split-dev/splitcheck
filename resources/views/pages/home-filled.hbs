<!DOCTYPE html>
<html lang="en">

<head>
  {{> ../common/head }}
</head>

<body class="home">
  {{> ../common/mobile-menu }}
  {{> ../common/mobile-menu-bottom }}
  <div class="section-blur theme-background-one">
    {{> ../common/header-next }}
    <div class="container">
      <div class="main-content">
        <aside class="aside-left">
          <section class="section-content">
            <span class="section-content__title">shop for</span>
            <div class="personal-card">
              <div class="personal-card__avatar personal-card__avatar--no-img">
                <img src="" alt="">
                <span class="personal-card__symbol">JS</span>
              </div>
              <p class="personal-card__name">John Smith</p>
              <ul class="personal-card__list">
                <li class="personal-card__item">
                  <a href="#" class="personal-card__link">
                    <span>John’s wishlist</span>
                    <span class="personal-card__num">12</span>
                  </a>
                </li>
                <li class="personal-card__item">
                  <a href="#" class="personal-card__link">
                    <span>View preferences</span>
                  </a>
                </li>
              </ul>
            </div>

            <a href="#" class="section-content__btn btn-border">Shop for another</a>
          </section>

          <section class="section-content">
            <span class="section-content__title">Other links</span>

            <div class="other-links">
              <ul class="other-links__list">
                <li class="other-links__item">
                  <a href="#" class="other-links__link">
                    <i class="icon icon-gift"></i>
                    <span>Spoil yourself</span>
                  </a>
                </li>
                <li class="other-links__item">
                  <a href="#" class="other-links__link">
                    <i class="icon icon-social-media"></i>
                    <span>Open public goss</span>
                  </a>
                </li>
                <li class="other-links__item">
                  <a href="#" class="other-links__link">
                    <i class="icon icon-discount"></i>
                    <span>Snatch a bargain</span>
                  </a>
                </li>
                <li class="other-links__item">
                  <a href="#" class="other-links__link">
                    <i class="icon icon-mail"></i>
                    <span>Shared orders</span>
                  </a>
                </li>
                <li class="other-links__item">
                  <a href="#" class="other-links__link">
                    <i class="icon icon-group"></i>
                    <span>My groups</span>
                  </a>
                </li>
                <li class="other-links__item">
                  <a href="#" class="other-links__link">
                    <i class="icon icon-heart"></i>
                    <span>My family</span>
                  </a>
                </li>
                <li class="other-links__item">
                  <a href="#" class="other-links__link">
                    <i class="icon icon-notification"></i>
                    <span>Alerts</span>
                  </a>
                </li>
                <li class="other-links__item">
                  <a href="#" class="other-links__link">
                    <i class="icon icon-setting"></i>
                    <span>Shopping preferences</span>
                  </a>
                </li>
              </ul>
            </div>
          </section>
        </aside>
        <main class="main">
          <section class="section-content">
            <span class="section-content__title">
              <span>What’s the goss?</span>
              <i class="icon icon-help"></i>
            </span>
            <i></i>
            <div class="card-goss">
              <div class="card-goss__slider swiper-container">
                <div class="swiper-wrapper">
                  <div class="swiper-slide">
                    <a href="#" class="card-goss__item card-goss__item--new">
                      <i class="icon icon-plus"></i>
                    </a>
                    <span class="card-goss__name">#Create</span>
                  </div>
                  <div class="swiper-slide">
                    <a href="#" class="card-goss__item card-goss__item--no-img">
                    </a>
                    <span class="card-goss__name"></span>
                  </div>
                  <div class="swiper-slide">
                    <a href="#" class="card-goss__item card-goss__item--no-img">
                    </a>
                    <span class="card-goss__name"></span>
                  </div>
                  <div class="swiper-slide">
                    <a href="#" class="card-goss__item card-goss__item--no-img">
                    </a>
                    <span class="card-goss__name"></span>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </main>
        <aside class="aside-right">
          <section class="section-content">
            <span class="section-content__title">My timeline</span>

            <div class="scroll-div">
              <a href="#" class="new-item">
                <span>
                  <i class="icon icon-plus"></i>
                  Add to a timeline
                </span>
              </a>

              <div class="timeline">
                <div class="timeline__line"></div>
                <ul class="timeline__list">
                  <li class="timeline__item">
                    <span class="timeline__date timeline__date--active">2:30 pm today</span>
                    <article class="timeline__card card-timeline">
                      <!-- notification -->
                      <div class="card-timeline__notification">
                        <i class="icon icon-bell"></i>
                      </div>
                      <!-- card-inner -->
                      <div class="card-timeline__inner">
                        <!-- card-header -->
                        <div class="card-timeline__header">
                          <div class="card-timeline__info card-timeline__info--main">
                            <p>Lunch with friends in lorem ipsum dolor sit amet or something</p>
                            <p>Budget: <span class="bold">$45 per person</span></p>
                          </div>
                        </div>
                        <!-- card-body -->
                        <div class="card-timeline__body">
                          <span class="card-timeline__title">Who is coming?</span>
                          <ul class="card-timeline__list">
                            <li class="card-timeline__item">
                              <a href="#"
                                class="card-timeline__link card-timeline__link--contact card-timeline__link--no-img">
                                <img src="" alt="avatar">
                                <span>JS</span>
                              </a>
                            </li>
                          </ul>
                        </div>
                        <!-- card-bottom -->
                        <div class="card-timeline__bottom">
                          <span class="card-timeline__title">Location</span>
                          <div class="card-timeline__info">
                            <p>4 Bellbird Cres, Coomera, QLD, 4209</p>
                          </div>
                        </div>

                        <!-- btn-more -->
                        <a href="#" class="card-timeline__btn-more">
                          <i class="icon icon-more"></i>
                        </a>
                      </div>
                    </article>
                  </li>
                  <li class="timeline__item">
                    <span class="timeline__date">10:00 am Friday</span>
                    <article class="timeline__card card-timeline">
                      <!-- notification -->
                      <div class="card-timeline__notification">
                        <i class="icon icon-bell"></i>
                      </div>
                      <!-- card-inner -->
                      <div class="card-timeline__inner">
                        <!-- card-header -->
                        <div class="card-timeline__header">
                          <div class="card-timeline__info card-timeline__info--main">
                            <p>Lunch with friends in lorem ipsum dolor sit amet or something</p>
                            <p>Budget: <span class="bold">$45 per person</span></p>
                          </div>
                        </div>
                        <!-- btn-more -->
                        <a href="#" class="card-timeline__btn-more">
                          <i class="icon icon-more"></i>
                        </a>
                      </div>
                    </article>
                  </li>
                  <li class="timeline__item">
                    <span class="timeline__date">14:30 pm Friday</span>
                    <article class="timeline__card card-timeline card-timeline--visible-notification">
                      <!-- notification -->
                      <div class="card-timeline__notification">
                        <i class="icon icon-bell"></i>
                      </div>
                      <!-- card-inner -->
                      <div class="card-timeline__inner">
                        <!-- card-header -->
                        <div class="card-timeline__header">
                          <span class="card-timeline__title">
                            <span>Added by:</span>
                            <span class="bold">You</span>
                          </span>
                          <div class="card-timeline__info card-timeline__info--main">
                            <p>Product name lorem ipsum dolor sit amet or something</p>
                            <p>Budget: <span class="bold">$45 per person</span></p>
                          </div>
                        </div>
                        <!-- card-body -->
                        <div class="card-timeline__body">
                          <figure class="card-timeline__img">
                            <img src="images/product/1.jpg" alt="product">
                          </figure>
                        </div>
                        <!-- card-bottom -->
                        <div class="card-timeline__bottom">
                          <span class="card-timeline__title">Comment</span>
                          <div class="card-timeline__info">
                            <p>I plan to buy it for my mum</p>
                          </div>
                        </div>

                        <!-- btn-more -->
                        <a href="#" class="card-timeline__btn-more">
                          <i class="icon icon-more"></i>
                        </a>
                      </div>
                    </article>
                  </li>
                </ul>

              </div>
            </div>


            <a href="#" class="btn-border">Load more</a>
          </section>


        </aside>
      </div>
    </div>

    {{> ../common/footer }}
  </div>
  {{> ../common/modal }}
</body>

</html>
