<!DOCTYPE html>
<html lang="en">

<head>
    {{> ../common/head }}
</head>

<body class="profile home groups">
    {{> ../common/mobile-menu }}
    {{> ../common/mobile-menu-bottom }}
    <div class="section-blur " data-class="maze">
        {{> ../common/header-next }}
        <div class="container">
            <div class="main-content position-relative d-flex align-items-start justify-content-between">
                <!-- aside-left -->
                <aside class="aside-left">
                    <div class="scroll-div">

                        <section class="section-content">
                            <span class="section-content__title position-relative d-flex align-items-center">Other
                                links</span>

                            <div class="other-links">
                                <ul class="other-links__list d-flex flex-column list-unstyled mb-0">
                                    <li class="other-links__item">
                                        <a href="#" class="other-links__link position-relative">
                                            <!-- add class "active" <i class="icon icon-gift"></i> what would the icon change -->
                                            <i class="icon icon-gift active"></i>
                                            <span>Spoil yourself</span>
                                        </a>
                                    </li>
                                    <li class="other-links__item">
                                        <a href="#" class="other-links__link position-relative">
                                            <!-- add class "active" what would the icon change -->
                                            <i class="icon icon-social-media"></i>
                                            <span>Open public goss</span>
                                        </a>
                                    </li>
                                    <li class="other-links__item">
                                        <a href="#"
                                            class="other-links__link position-relative d-flex align-items-center">
                                            <!-- add class "active" what would the icon change -->
                                            <i class="icon icon-discount"></i>
                                            <span>Snatch a bargain</span>
                                        </a>
                                    </li>
                                    <li class="other-links__item">
                                        <a href="#"
                                            class="other-links__link position-relative d-flex align-items-center">
                                            <!-- add class "active" what would the icon change -->
                                            <i class="icon icon-mail"></i>
                                            <span>Shared orders</span>
                                        </a>
                                    </li>
                                    <li class="other-links__item active-page">
                                        <a href="#"
                                            class="other-links__link position-relative d-flex align-items-center">
                                            <!-- add class "active" what would the icon change -->
                                            <i class="icon icon-group"></i>
                                            <span>My groups</span>
                                        </a>
                                    </li>
                                    <li class="other-links__item">
                                        <a href="#"
                                            class="other-links__link position-relative d-flex align-items-center">
                                            <!-- add class "active" what would the icon change -->
                                            <i class="icon icon-heart"></i>
                                            <span>My family</span>
                                        </a>
                                    </li>
                                    <li class="other-links__item">
                                        <a href="#" data-toggle="modal" data-target="#notification"
                                            class="other-links__link position-relative d-flex align-items-center">
                                            <i class="icon icon-notification"></i>
                                            <!-- add class "active" what would the icon change -->
                                            <span>Alerts</span>
                                        </a>
                                    </li>
                                    <li class="other-links__item">
                                        <a href="/shopping-preferences.html"
                                            class="other-links__link position-relative d-flex align-items-center ">
                                            <i class="icon icon-setting"></i>
                                            <!-- add class "active" what would the icon change -->
                                            <span>Shopping preferences</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </section>
                    </div>
                </aside>
                <!-- /aside-left -->
                <div class="profile__list d-flex flex-column w-100">
                    <div class="profile-face w-100 d-flex flex-column">
                        <div class="profile-face__background w-100 d-flex">
                            <a href="#" class="btn-blue-full"><img src="images/icons/camera-24px.svg" alt="">Upload
                                cover photo</a>
                            <a href="#" class="btn-border">Or use colour
                                <ul class="select-color">
                                    <li class="select"></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                </ul>
                            </a>
                        </div>
                        <div class="profile-face__info d-flex align-items-center justify-content-between">
                            <div class="profile-face__photo d-flex justify-content-center align-items-center">
                                <span class="profile-face__initial">AD</span>
                                <a href="#add-photo" data-toggle="modal" class="profile-face__hover d-flex flex-column">
                                    <img src="images/icons/photo.svg" alt="photo">
                                    <span>Upload photo</span>
                                </a>
                            </div>
                            <div class="profile-face__name d-flex align-items-end dotted">
                                {{!-- class dotted adds a line with dots --}}
                                <strong>Group 1</strong>
                                <span>|</span>
                                <a href="#">Edit grop name</a href="#">
                            </div>
                            <div class="profile-face__date">
                                <div class="groups__check form d-flex">

                                    <input type="checkbox" id="checkbox-1"
                                        class="form__checkbox form__single settings__check form__single--fluid form__single--checkbox form__checkbox--language"
                                        name="checkbox-language" checked="">
                                    <label for="checkbox-1">
                                    </label>
                                    <strong class="check-off">Draft</strong>
                                    <strong class="check-on">Published</strong>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="profile__bottom d-flex">
                        <div class="form groups__create d-flex flex-column w-100">
                            <div class="d-flex flex-column w-100">
                                <strong class="text-gray">Status</strong>
                                <div class="groups__list w-100">
                                    <div class="groups__check d-flex">

                                        <input type="checkbox" id="checkbox-2"
                                            class="form__checkbox form__single settings__check form__single--fluid form__single--checkbox form__checkbox--language"
                                            name="checkbox-language" checked="">
                                        <label for="checkbox-2">
                                        </label>
                                        <strong class="check-off">Independant group</strong>
                                        <strong class="check-on">Sub-group</strong>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex flex-column w-100 groups__block-textarea">
                                <strong class="text-gray">about</strong>
                                <div class="groups__list w-100">
                                    <div class="d-flex flex-column  groups__textarea">
                                        <label class="form__label">
                                            Short info about</label>
                                        <textarea placeholder="Write something" maxlength="400" minlength="1"
                                            class="form__textarea"></textarea>

                                        <span class="form__symbol-error"></span>
                                    </div>

                                    <div class="d-flex flex-column groups__textarea">
                                        <label class="form__label">
                                            Rules (optional)</label>
                                        <textarea placeholder="Write something" maxlength="400" minlength="1"
                                            class="form__textarea"></textarea>

                                        <span class="form__symbol-error"></span>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <a href="#" class="btn-blue">Save</a>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex flex-column w-100 groups__block-toggle">
                                <strong class="text-gray">settings</strong>
                                <div class="groups__list">
                                    <div class="groups__toggle d-flex justify-content-between">
                                        <h5>Privacy and general preferences</h5>

                                    </div>
                                    <div class="groups__hide" style="display: none;">
                                        <div
                                            class="groups__select form__single--select form__single--select-default form__single--fluid">
                                            <label class="form__label">New member approval</label>
                                            <div class="select-before">
                                                <select
                                                    class="form__select form__select--default select2-hidden-accessible"
                                                    data-toggle="select" data-select2-id="1" tabindex="-1"
                                                    aria-hidden="true">
                                                    <option value="#">Admin</option>
                                                    <option value="#">Group leader</option>
                                                    <option value="#">Anyone</option>

                                                </select>
                                            </div>
                                            <small>Admin: Has all rights in the group</small>

                                        </div>

                                        <div
                                            class="groups__select form__single--select form__single--select-default form__single--fluid">
                                            <label class="form__label">Group privacy</label>
                                            <div class="select-before">
                                                <select
                                                    class="form__select form__select--default select2-hidden-accessible"
                                                    data-toggle="select" data-select2-id="2" tabindex="-1"
                                                    aria-hidden="true">
                                                    <option value="#">Public</option>
                                                    <option value="#">Closed</option>
                                                    <option value="#">Private</option>

                                                </select>
                                            </div>

                                        </div>

                                        <div
                                            class="groups__select form__single--select form__single--select-default form__single--fluid">
                                            <label class="form__label">Target age bracket</label>
                                            <div class="select-before">
                                                <select
                                                    class="form__select form__select--default select2-hidden-accessible"
                                                    data-toggle="select" data-select2-id="3" tabindex="-1"
                                                    aria-hidden="true">
                                                    <option value="#">16-25</option>
                                                    <option value="#">25-40</option>
                                                    <option value="#">40-60</option>

                                                </select>
                                            </div>
                                        </div>

                                        <div
                                            class="groups__select form__single--select form__single--select-default form__single--fluid">
                                            <label class="form__label">Group type</label>
                                            <div class="select-before">
                                                <select
                                                    class="form__select form__select--default select2-hidden-accessible"
                                                    data-toggle="select" data-select2-id="4" tabindex="-1"
                                                    aria-hidden="true">
                                                    <option value="#">Shopping</option>
                                                    <option value="#">Shopping</option>
                                                    <option value="#">Shopping</option>

                                                </select>
                                            </div>
                                        </div>

                                        <div
                                            class="groups__select form__single--select form__single--select-default form__single--fluid">
                                            <label class="form__label">Group category</label>
                                            <div class="select-before">
                                                <select
                                                    class="form__select form__select--default select2-hidden-accessible"
                                                    data-toggle="select" data-select2-id="5" tabindex="-1"
                                                    aria-hidden="true">
                                                    <option value="#">Category</option>
                                                    <option value="#">Category</option>

                                                </select>
                                            </div>

                                        </div>

                                        <div class="groups__select">
                                            <p>Approve posts?</p>
                                            <div class="groups__check form d-flex">

                                                <input type="checkbox" id="checkbox-3"
                                                    class="form__checkbox form__single settings__check form__single--fluid form__single--checkbox form__checkbox--language"
                                                    name="checkbox-language" checked="">
                                                <label for="checkbox-3">
                                                </label>
                                                <strong class="check-off">No</strong>
                                                <strong class="check-on">Yes</strong>
                                            </div>
                                        </div>


                                        <div class="groups__select">
                                            <p>Allow SplitChek business partners to contact you to advertise on your
                                                group?</p>
                                            <div class="groups__check form d-flex">

                                                <input type="checkbox" id="checkbox-3"
                                                    class="form__checkbox form__single settings__check form__single--fluid form__single--checkbox form__checkbox--language"
                                                    name="checkbox-language" checked="">
                                                <label for="checkbox-3">
                                                </label>
                                                <strong class="check-off">No</strong>
                                                <strong class="check-on">Yes</strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="d-flex justify-content-end groups__btn">
                                <a class="btn-border" href="#">Cansel</a>
                                <a class="btn-blue" href="#">Create group</a>
                            </div>
                        </div>
                        {{> ../common/profile/connections }}
                    </div>

                </div>

            </div>
        </div>
    </div>


    {{> ../common/footer }}
    </div>

    <!-- Modals -->
    {{> ../common/modals/create-goss }}
    {{> ../common/modals/menu-mobile }}
    {{> ../common/modals/add-photo }}
    {{> ../common/modals/user-profile-menu }}
    {{> ../common/modals/share-product }}
    {{> ../common/modals/add-timeline-product }}
    {{> ../common/modals/add-wishlist }}
    {{> ../common/modals/search-parameters }}
    {{> ../common/modals/cart }}
    {{> ../common/modals/add-comment }}
    {{> ../common/modals/store-info }}
    {{> ../common/modals/shop-another }}
    {{> ../common/modals/modals-notifications }}
    {{> ../common/modals/message-overlay }}
    {{> ../common/modals/goss-gallery }}
    {{> ../common/modals/menu-mobile--not-shop }}
    <!-- /Modals -->
</body>

</html>