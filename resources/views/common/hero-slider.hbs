{{#with page-hero}}
  <div class="page-hero bg-cover-fixed position-relative" >
    <div class="swiper-container home-slider">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="page-hero__left">
            <div class="container h-100">
              <div class="d-flex flex-column h-100">
                <div class="page-hero__info">
                 <h2>Have you everâ€¦ </h2>
                  <p>been driven crazy trying to decide <a href="#">what gift</a> to buy for a friend or loved one? </p>
                  <p>bought someone a <a href="#">meaningful gift</a>, only to see a look of disappointment on their face when they open it?</p>
                  <p>wished for a more significant and meaningful gift but were too embarrassed to ask your friends and family to
                    <a href="#">share the cost?</a></p>
                </div>
              </div>
            </div>
          </div>
          <div class="page-hero__right" style="background-image: url('{{image}}'); background-position: center">
          </div>
        </div>
      </div>

      <!-- If we need pagination -->
      <div class="swiper-pagination"></div>

      <!-- If we need navigation buttons -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>

      <!-- If we need scrollbar -->
      <div class="swiper-scrollbar"></div>
    </div>
  </div>
{{/with}}
