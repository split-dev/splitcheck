<!DOCTYPE html>
<html lang="en">

<head>
  {{> ../common/head }}
</head>

<body class="shop home">
  {{> ../common/mobile-menu }}
  {{> ../common/mobile-menu-bottom }}
  <div class="section-blur theme-background-one">
    {{> ../common/header-next }}
    <div class="container">
      <div class="main-content position-relative d-flex align-items-start justify-content-between">
        <!-- aside-left -->
        <aside class="aside-left">
          <div class="scroll-div">
            <section class="section-content">
              <span class="section-content__title position-relative d-flex align-items-center">shop for</span>
              <div class="personal-card d-flex align-items-center flex-column overflow-hidden">
                <div
                  class="personal-card__avatar personal-card__avatar--no-img d-flex align-items-center justify-content-center overflow-hidden">
                  <img src="" alt="">
                  <span class="personal-card__symbol">JS</span>
                </div>
                <p class="personal-card__name">John Smith</p>
                <ul class="personal-card__list d-flex align-items-center flex-column list-unstyled mb-0">
                  <li class="personal-card__item">
                    <a href="#" class="personal-card__link">
                      <span>John’s wishlist</span>
                      <span class="personal-card__num">12</span>
                    </a>
                  </li>
                  <li class="personal-card__item">
                    <a href="#" class="personal-card__link">
                      <span>View preferences</span>
                    </a>
                  </li>
                </ul>
              </div>

              <a href="#" class="section-content__btn btn-border">Shop for another</a>
            </section>

            <section class="section-content">
              <span class="section-content__title position-relative d-flex align-items-center">Other links</span>

              <div class="other-links">
                <ul class="other-links__list d-flex flex-column list-unstyled mb-0">
                  <li class="other-links__item">
                    <a href="#" class="other-links__link position-relative">
                      <!-- add class "active" <i class="icon icon-gift"></i> what would the icon change -->
                      <i class="icon icon-gift active"></i>
                      <span>Spoil yourself</span>
                    </a>
                  </li>
                  <li class="other-links__item">
                    <a href="#" class="other-links__link position-relative">
                      <!-- add class "active" what would the icon change -->
                      <i class="icon icon-social-media"></i>
                      <span>Open public goss</span>
                    </a>
                  </li>
                  <li class="other-links__item">
                    <a href="#" class="other-links__link position-relative d-flex align-items-center">
                      <!-- add class "active" what would the icon change -->
                      <i class="icon icon-discount"></i>
                      <span>Snatch a bargain</span>
                    </a>
                  </li>
                  <li class="other-links__item">
                    <a href="#" class="other-links__link position-relative d-flex align-items-center">
                      <!-- add class "active" what would the icon change -->
                      <i class="icon icon-mail"></i>
                      <span>Shared orders</span>
                    </a>
                  </li>
                  <li class="other-links__item">
                    <a href="#" class="other-links__link position-relative d-flex align-items-center">
                      <!-- add class "active" what would the icon change -->
                      <i class="icon icon-group"></i>
                      <span>My groups</span>
                    </a>
                  </li>
                  <li class="other-links__item">
                    <a href="#" class="other-links__link position-relative d-flex align-items-center">
                      <!-- add class "active" what would the icon change -->
                      <i class="icon icon-heart"></i>
                      <span>My family</span>
                    </a>
                  </li>
                  <li class="other-links__item">
                    <a href="#" class="other-links__link position-relative d-flex align-items-center">
                      <i class="icon icon-notification"></i>
                      <!-- add class "active" what would the icon change -->
                      <span>Alerts</span>
                    </a>
                  </li>
                  <li class="other-links__item">
                    <a href="#" class="other-links__link position-relative d-flex align-items-center">
                      <i class="icon icon-setting"></i>
                      <!-- add class "active" what would the icon change -->
                      <span>Shopping preferences</span>
                    </a>
                  </li>
                </ul>
              </div>
            </section>
          </div>
        </aside>
        <!-- /aside-left -->
        <!-- main -->
        <main class="main">
          <section class="section-content">
            <a href="#" data-toggle="modal" data-target="#goss"
              class="section-content__title position-relative d-flex align-items-center">
              <span>What’s the goss?</span>
              <i class="icon icon-help"></i>
            </a>
            <i></i>
            <div class="card-goss position-relative">
              <div class="card-goss__slider swiper-container">
                <div class="swiper-wrapper">
                  <div class="swiper-slide">
                    <a href="#" data-toggle="modal" data-target="#create-goss"
                      class="card-goss__item card-goss__item--new position-relative d-flex align-items-center justify-content-center">
                      <i class="icon icon-plus"></i>
                    </a>
                    <span class="card-goss__name">#Create</span>
                  </div>
                  <div class="swiper-slide">
                    <a href="#"
                      class="card-goss__item position-relative d-flex align-items-center justify-content-center overflow-hidden">
                      <figure class="card-goss__img" style="background-image: url('images/goss/img1.png');"></figure>
                    </a>
                    <span class="card-goss__name">#Funny</span>
                  </div>
                  <div class="swiper-slide">
                    <a href="#"
                      class="card-goss__item position-relative d-flex align-items-center justify-content-center overflow-hidden">
                      <figure class="card-goss__img" style="background-image: url('images/goss/img2.png');"></figure>
                    </a>
                    <span class="card-goss__name">#Stories</span>
                  </div>
                  <div class="swiper-slide">
                    <a href="#"
                      class="card-goss__item position-relative d-flex align-items-center justify-content-center overflow-hidden">
                      <figure class="card-goss__img" style="background-image: url('images/goss/img2.png');"></figure>
                    </a>
                    <span class="card-goss__name">#Sales</span>
                  </div>
                  <div class="swiper-slide">
                    <a href="#"
                      class="card-goss__item position-relative d-flex align-items-center justify-content-center overflow-hidden">
                      <figure class="card-goss__img" style="background-image: url('images/goss/img2.png');"></figure>
                    </a>
                    <span class="card-goss__name">#Sales</span>
                  </div>
                </div>
              </div>
              <div class="swiper-button-prev"></div>
              <div class="swiper-button-next"></div>
            </div>
          </section>

          <section class="section-content">
            <div class="main__card main__card--bias main__card--preferences position-relative">
              <div
                class="preferences position-relative d-flex flex-column flex-sm-row align-items-center justify-content-center justify-content-sm-between">
                <figure class="preferences__img">
                  <img src="images/shop/preferences-img.svg" alt="img">
                </figure>
                <div class="preferences__info">
                  <h2>Set what you are looking for and we will update you as we find it</h2>
                  <a href="#" class="btn-border">Set search parameters</a>
                </div>
              </div>
            </div>
          </section>

          <section class="section-content">
            <div class="main__card main__card--bias position-relative">
              <div class="internal-card internal-card--feed">
                <div class="internal-card__header">
                  <a href="#" class="internal-card__profile">
                    <figure class="internal-card__avatar">
                      <img src="images/profiles/img1.png" alt="avatar">
                      <span class="internal-card__symbol"></span>
                    </figure>
                    <div class="internal-card__head-info">
                      <h2 class="internal-card__name">SplitChek</h2>
                      <p class="internal-card__subname">
                        <span>sponsored</span>
                        <span class="internal-card__date"></span>
                      </p>
                    </div>
                  </a>
                </div>
                <div class="internal-card__body">
                  <p>Yellow pages reinvented on SplitChek, list your business on SplitChek and get $250 credited to your
                    SplitChek Ads account</p>

                  <div
                    class="internal-card__grid internal-card__grid--single internal-card__grid--margin-bt grid-gallery d-flex flex-wrap">
                    <figure class="grid-gallery__width-1-1">
                      <a class="grid-gallery__selector position-relative" href="images/feed/feed-img1.jpg">
                        <div class="grid-gallery__post-img" style="background-image: url(images/feed/feed-img1.jpg);">
                        </div>
                      </a>
                    </figure>
                  </div>

                  <p>To help your skin thrive, use Moroccan argan extract which conditions and moisturizes while
                    chlorella brings a boost of skin-benefiting vitamins and omega 3s for extra glowing goodness
                    <a href="#">...Read More</a>
                  </p>
                </div>
                <div class="internal-card__bottom">
                  <div class="reaction">
                    <div class="reaction__top">
                      <div class="reaction__quantity">
                        <ul class="reaction__list-icon list-unstyled mb-0">
                          <li class="reaction__item-icon">
                            <i class="icon icon-like"></i>
                          </li>
                          <li class="reaction__item-icon">
                            <i class="icon icon-heart-l"></i>
                          </li>
                          <li class="reaction__item-icon">
                            <i class="icon icon-happy"></i>
                          </li>
                          <li class="reaction__item-icon">
                            <i class="icon icon-surprised"></i>
                          </li>
                          <li class="reaction__item-icon">
                            <i class="icon icon-angry"></i>
                          </li>
                        </ul>
                        <span>56</span>
                      </div>
                      <span class="reaction__text">0 comments</span>
                    </div>
                    <div class="reaction__bottom">
                      <div class="reaction__link-reaction reaction__link-reaction--like">

                        <i class="icon icon-like-blue"></i>
                        <span>like</span>

                        <div class="reaction-btn-like">
                          <ul class="reaction-btn-like__list list-unstyled mb-0">
                            <li class="reaction-btn-like__item">
                              <a href="#" class="reaction-btn-like__link">
                                <i class="icon icon-like-big"></i>
                              </a>
                            </li>
                            <li class="reaction-btn-like__item">
                              <a href="#" class="reaction-btn-like__link">
                                <i class="icon icon-heart-l-big"></i>
                              </a>
                            </li>
                            <li class="reaction-btn-like__item">
                              <a href="#" class="reaction-btn-like__link">
                                <i class="icon icon-happy-big"></i>
                              </a>
                            </li>
                            <li class="reaction-btn-like__item">
                              <a href="#" class="reaction-btn-like__link">
                                <i class="icon icon-surprised-big"></i>
                              </a>
                            </li>
                            <li class="reaction-btn-like__item">
                              <a href="#" class="reaction-btn-like__link">
                                <i class="icon icon-angry-big"></i>
                              </a>
                            </li>
                          </ul>
                        </div>
                      </div>
                      <div class="reaction__wrap-link">
                        <a href="#" class="reaction__link-reaction">
                          <i class="icon icon-comment"></i>
                          <span>comment</span>
                        </a>
                      </div>
                      <div class="reaction__wrap-link">
                        <a href="#" class="reaction__link-reaction">
                          <i class="icon icon-plus-blue"></i>
                          <span>add to timeline</span>
                        </a>
                      </div>
                    </div>
                  </div>

                  <div class="internal-card__buttons">
                    <a href="#" class="btn-orange">Add to Cart</a>
                  </div>
                </div>

                <!-- option  add class: - options--open -->
                <div class="options">
                  <button type="button" class="options__btn" data-type="options">
                    <i class="icon icon-more"></i>
                  </button>

                  <div class="options__dropdown">
                    <ul class="list-unstyled mb-0">
                      <li><a href="#">Share</a></li>
                      <li><a href="#">Not gift worthy</a></li>
                      <li><a href="#">About the store</a></li>
                      <li><a href="#">Report abuse</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </main>
        <!-- /main -->
        <!-- aside-right -->
        <aside class="aside-right">
          <section class="section-content">
            <span class="section-content__title position-relative d-flex align-items-center">sponsored</span>
            <div
              class="useful-info d-flex flex-wrap justify-content-center justify-content-sm-between justify-content-lg-center justify-content-xl-between">
              <figure class="useful-info__img">
                <img src="images/shop/useful-info.svg" alt="useful-info-img">
              </figure>
              <div class="useful-info__info">
                <span>Shop with confidence</span>
                <h2>SplitChek Money Back Guarantee</h2>
                <p>
                  Get the item you ordered or get your money back
                  <a href="">… Read More</a>
                </p>
              </div>
            </div>
          </section>
        </aside>
        <!-- /aside-right -->
      </div>
    </div>

    {{> ../common/footer }}
  </div>

  <!-- Modals -->
  {{> ../common/modals/add-timeline }}
  {{> ../common/modals/create-goss }}
  {{> ../common/modals/menu-mobile }}
  {{> ../common/modals/add-photo }}
  {{> ../common/modals/user-profile-menu }}
  <!-- /Modals -->
</body>

</html>
